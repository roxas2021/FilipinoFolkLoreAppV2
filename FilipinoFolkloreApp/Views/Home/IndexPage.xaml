<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FilipinoFolkloreApp.Views.Home.IndexPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundImageSource="bg_index.jpeg"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, Auto, *"
        ColumnDefinitions="*"
        Padding="20">

        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" VerticalOptions="Start">
            <Grid
    Grid.Column="0"
    RowDefinitions="Auto, Auto"
    ColumnDefinitions="Auto, Auto, *, Auto">

                <!-- Avatar -->
                <Frame Grid.RowSpan="2"
           Grid.Column="0"
           WidthRequest="80"
           HeightRequest="90"
           CornerRadius="10"
           Padding="0"
           HasShadow="True"
           BackgroundColor="White">
                    <Image Source="avatar1.png"
             Aspect="AspectFill"/>
                </Frame>

                <!-- Name + Stars pill -->
                <Frame  Margin="10,0,0,0"
                      Grid.Row="0"
                      Grid.Column="1"
                      BackgroundColor="LightGreen"
                      CornerRadius="10"
                      Padding="8,4"
                      HorizontalOptions="Start"
                      VerticalOptions="Center">

                    <Grid ColumnDefinitions="Auto, *, Auto" VerticalOptions="Center">
                        <!-- Name -->
                        <Label Grid.Column="0"
         Text="NICHOL"
         FontAttributes="Bold"
         FontSize="18"
         TextColor="#FF66CC"
         VerticalOptions="Center"/>

                        <!-- Spacer -->
                        <BoxView Grid.Column="1" />

                        <!-- Stars wrapped in a Frame for background + border -->
                        <Frame Grid.Column="2"
                             Padding="10,4"
                             BackgroundColor="LightGreen"
                             BorderColor="Black"
                             CornerRadius="12"
                             HasShadow="False"
                             VerticalOptions="Center"
                               Margin="10,0,0,0">
                            <Frame.Shadow>
                                <Shadow Brush="Black"
                                        Offset="-4,4"
                                        Radius="8"
                                        Opacity="0.5" />
                            </Frame.Shadow>
                            <StackLayout Orientation="Horizontal" Spacing="4">
                                <Label Text="50"
                                 FontAttributes="Bold"
                                 FontSize="20"
                                 TextColor="#FFCC00"/>
                                <Image Source="icon_star_yellow.png"
                                 WidthRequest="35"
                                 HeightRequest="35"/>
                            </StackLayout>
                        </Frame>
                    </Grid>

                </Frame>

                <!-- Hearts in row 1 across columns 1â€“3 -->
                <Frame Grid.Row="1"
           Grid.Column="1"
           Grid.ColumnSpan="3"
           CornerRadius="12"
           Padding="6,2" Margin="10,0,0,0"
           BackgroundColor="White"
           HorizontalOptions="Start">
                    <StackLayout Orientation="Horizontal" Spacing="4">
                        <Image Source="heart_full.png"
               WidthRequest="20"
               HeightRequest="20"/>
                        <Image Source="heart_full.png"
               WidthRequest="20"
               HeightRequest="20"/>
                        <Image Source="heart_full.png"
               WidthRequest="20"
               HeightRequest="20"/>
                    </StackLayout>
                </Frame>
            </Grid>

            <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalOptions="Start">
                <Button Text="MEDALYA"
                FontAttributes="Bold"
                FontSize="20"
                BackgroundColor="LightGreen"
                TextColor="Orange"
                CornerRadius="12"
                Padding="12,6"
                />
                <ImageButton Source="icon_home.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     BackgroundColor="Transparent"/>
                <ImageButton Source="icon_settings.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     BackgroundColor="Transparent"/>
            </StackLayout>
        </Grid>

        <!--<BoxView Grid.Row="1" HeightRequest="1" Color="#66FFFFFF" Margin="0,10"/>-->

        <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*"
          RowDefinitions="Auto"
          ColumnSpacing="20"
          HorizontalOptions="Center"
          VerticalOptions="Center">

            <Button Grid.Column="0" Text="ALAMAT"
              BackgroundColor="#CC3333"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="40"
              WidthRequest="130"
              HeightRequest="40"/>

            <Button Grid.Column="1" Text="EPIKO"
              BackgroundColor="#CC6699"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="40"
              WidthRequest="130"
              HeightRequest="40"/>

            <Button Grid.Column="2" Text="PABULA"
              BackgroundColor="#99CC33"
              TextColor="White"
              FontAttributes="Bold"
              CornerRadius="40"
              WidthRequest="130"
              HeightRequest="40"/>

            <Button Grid.Column="3" Text="MGA LARO"
              BackgroundColor="#3399CC"
              TextColor="White"
              FontAttributes="Bold"
              WidthRequest="130"
              CornerRadius="40"
              HeightRequest="40"/>
        </Grid>
    </Grid>
</ContentPage>
