<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="FilipinoFolkloreApp.Views.QuizPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImageSource="ui/bg_landscape.png">
    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="14">

        <!-- HUD: narrator avatar + hearts only -->
        <Grid ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="8">
            <Image x:Name="QuizAvatar" HeightRequest="48" WidthRequest="48"/>
            <Image Grid.Column="1" Source="ui/heart.png" HeightRequest="28"/>
            <Label Grid.Column="2" x:Name="QuizHearts" Text="3" FontAttributes="Bold" VerticalTextAlignment="Center"/>
        </Grid>

        <!-- question -->
        <Label Grid.Row="1" x:Name="QuizPrompt" Text="..." FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />

        <!-- three choices -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*,*" ColumnSpacing="18" Padding="10,0">
            <Border StrokeShape="RoundRectangle 18" BackgroundColor="#B3FFFFFF">
                <Image x:Name="Choice0" Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPick0"/>
                    </Image.GestureRecognizers>
                </Image>
            </Border>
            <Border Grid.Column="1" StrokeShape="RoundRectangle 18" BackgroundColor="#B3FFFFFF">
                <Image x:Name="Choice1" Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPick1"/>
                    </Image.GestureRecognizers>
                </Image>
            </Border>
            <Border Grid.Column="2" StrokeShape="RoundRectangle 18" BackgroundColor="#B3FFFFFF">
                <Image x:Name="Choice2" Aspect="AspectFit">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnPick2"/>
                    </Image.GestureRecognizers>
                </Image>
            </Border>
        </Grid>

    </Grid>
</ContentPage>
